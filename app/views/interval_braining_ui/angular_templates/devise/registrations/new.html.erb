<div card-container class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <h3>Sign up</h3>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'card'}) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit 'Sign up' %></div>
  <% end %>

  <%= link_to('Sign in', new_session_path(resource_name)) unless controller_name == 'sessions' %><br />
</div>
